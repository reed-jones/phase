{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "emitDeclarationOnly": true,
      "module": "ES6",
      "moduleResolution": "node",
      "target": "ESNext",
      "lib": ["ESNext", "DOM"],
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "noEmit": false,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": false,
      "baseUrl": "./",
      "paths": {
        "@/*": ["lib/*"],
      },
      "typeRoots": ["./lib"]
    },
    "include": ["lib"],
    "exclude": ["node_modules", "types", "__tests__"]
  }
